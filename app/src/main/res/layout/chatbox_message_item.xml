<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/friendlinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/sender_message_background"
        android:elevation="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/sender_message_background"
            android:backgroundTint="@color/mywhite"
            android:elevation="5dp"
            android:padding="6dp">


            <TextView
                android:id="@+id/sender_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxWidth="250dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:typeface="serif"
                tools:text="Hello! How Are You?" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/currentuserlinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/currentuser_message_background"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/currentuser_message_background"
            android:backgroundTint="@color/mywhite"
            android:elevation="5dp"
            android:translationZ="5dp"
            android:padding="6dp">

            <TextView
                android:id="@+id/current_user_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxWidth="250dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:typeface="serif"
                tools:text="Hello! How Are You?" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>