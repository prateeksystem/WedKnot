<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyWedknotInside.LifeStyleMyDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lifestyle Details"
                android:textColor="@color/colorAccent"
                android:textSize="28dp"
                android:gravity="center"
                android:layout_margin="5dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Me" />

                <EditText
                    android:id="@+id/about_me_my_lifestyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mylightgrey"
                    android:inputType="text"
                    android:maxLength="250"
                    android:maxLines="10"
                    android:scrollbars="vertical" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food" />

                <Spinner
                    android:id="@+id/food_my_lifestyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mylightgrey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drink" />

                <Spinner
                    android:id="@+id/drink_my_lifestyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mylightgrey" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smoke" />

                <Spinner
                    android:id="@+id/smoke_my_lifestyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mylightgrey" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skin Color" />

                <Spinner
                    android:id="@+id/skin_color_my_lifestyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mylightgrey" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body Type" />

                <Spinner
                    android:id="@+id/body_type_my_lifestyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/mylightgrey" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/skip_button_lifestyle"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="3dp"
            android:outlineAmbientShadowColor="@color/mywhite"
            android:outlineSpotShadowColor="@color/mywhite"
            android:shadowColor="@color/colorAccent"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:background="@color/colorAccent"
            android:text="SKIP"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffffff" />


        <Button
            android:id="@+id/next_button_lifestyle"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="3dp"
            android:background="@color/colorPrimary"
            android:outlineAmbientShadowColor="@color/mywhite"
            android:outlineSpotShadowColor="@color/mywhite"
            android:shadowColor="@color/colorPrimary"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:text="NEXT"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffffff" />

    </LinearLayout>


</RelativeLayout>