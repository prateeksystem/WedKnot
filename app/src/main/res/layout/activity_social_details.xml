<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    tools:context=".InitialForms.SocialDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Marital Status *"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />


    <Spinner
        android:id="@+id/marital_status"
        style="@style/EditText"
        android:spinnerMode="dialog"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:hint="Martial Status *"
        android:buttonTint="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Mother Tongue *"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/mother_tongue"
        style="@style/EditText"
        android:layout_marginTop="5dp"
        android:layout_height="40dp"
        android:hint="Mother Tongue  *"
        android:buttonTint="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Religion *"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <Spinner
        android:id="@+id/religion_spinner"
        style="@style/EditText"
        android:layout_marginTop="5dp"
        android:hint="Religion *"
        android:spinnerMode="dialog"
        android:layout_height="40dp"
        android:buttonTint="@color/colorAccent"/>

    <TextView
        android:id="@+id/caste_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="Caste *"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />


    <Spinner
        android:id="@+id/caste_spinner"
        style="@style/EditText"
        android:layout_marginTop="5dp"
        android:hint="Religion *"
        android:visibility="gone"
        android:spinnerMode="dialog"
        android:layout_height="40dp"
        android:buttonTint="@color/colorAccent"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/socialButton"
            style="@style/NextButton"
            android:layout_margin="10dp"
            android:outlineAmbientShadowColor="@color/mywhite"
            android:outlineSpotShadowColor="@color/mywhite"
            android:shadowColor="@color/colorPrimary"
            android:elevation="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:translationZ="10dp"
            android:background="@drawable/next_button"
            />

    </RelativeLayout>








</LinearLayout>